@page "{assignmentId:int}"
@model Panda.Pages.Mentor.CheckInModel
@{
    ViewData["Title"] = "Mentor – Veckorapport";
}

<h2>Mentor: veckorapport för uppdrag @Model.Assignment.Id</h2>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="AssignmentId" />

    <div class="row g-3">
        <div class="col-md-3">
            <label class="form-label">Vecka som börjar</label>
            <input asp-for="WeekStart" type="date" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Helhetsbedömning</label>
            <select asp-for="Assessment" class="form-select">
                <option value="1">Mycket dåligt</option>
                <option value="2">Dåligt</option>
                <option value="3">OK</option>
                <option value="4">Bra</option>
                <option value="5">Toppen</option>
            </select>
        </div>
        <div class="col-md-2"><label>Prestation (1–5)</label><input asp-for="Performance" type="number" min="1" max="5" class="form-control" /></div>
        <div class="col-md-2"><label>Samarbete (1–5)</label><input asp-for="Collaboration" type="number" min="1" max="5" class="form-control" /></div>
        <div class="col-md-2"><label>Takt (1–5)</label><input asp-for="Pace" type="number" min="1" max="5" class="form-control" /></div>
    </div>

    <hr />
    <div class="row g-3">
        <div class="col-md-4"><label>Observationer</label><textarea asp-for="Observations" rows="4" class="form-control"></textarea></div>
        <div class="col-md-4"><label>Rekommendationer</label><textarea asp-for="Recommendations" rows="4" class="form-control"></textarea></div>
        <div class="col-md-4"><label>Risker</label><textarea asp-for="Risks" rows="4" class="form-control"></textarea></div>
    </div>

    <button class="btn btn-primary mt-3">Spara</button>
</form>
