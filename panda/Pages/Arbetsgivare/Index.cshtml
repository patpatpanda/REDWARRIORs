@page
@model Panda.Pages.Arbetsgivare.IndexModel
@{
    ViewData["Title"] = "Arbetsgivare Dashboard";
}

<h2>Aktiva uppdrag</h2>
<table class="table">
    ...
    @foreach (var a in Model.Assignments.Where(x => x.EndDate == null))
    {
        <tr>
            <td>@a.Talent.FullName</td>
            <td>@a.Mentor.FullName</td>
            <td>@a.StartDate.ToShortDateString()</td>
            <td>
                <a asp-page="/Assignments/Details" asp-route-id="@a.Id">Visa feedback</a> |
                <a asp-page="/Arbetsgivare/Assignments/Edit" asp-route-id="@a.Id">Redigera</a> |
                <a asp-page="/Arbetsgivare/Assignments/Delete" asp-route-id="@a.Id">Radera</a>
            </td>
        </tr>
    }
</table>

<h2>Avslutade uppdrag</h2>
<table class="table">
    ...
    @foreach (var a in Model.Assignments.Where(x => x.EndDate != null))
    {
        <tr>
            <td>@a.Talent.FullName</td>
            <td>@a.Mentor.FullName</td>
            <td>@a.StartDate.ToShortDateString() - @a.EndDate?.ToShortDateString()</td>
            <td><a asp-page="/Assignments/Details" asp-route-id="@a.Id">Visa historik</a></td>
        </tr>
    }
</table>

