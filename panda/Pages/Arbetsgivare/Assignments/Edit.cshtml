@page "{id:int}"
@model Panda.Pages.Arbetsgivare.Assignments.EditModel
@{
    ViewData["Title"] = "Redigera uppdrag";
}

<h2>Redigera uppdrag</h2>

<form method="post">
    <input type="hidden" asp-for="Assignment.Id" />

    <div class="form-group mb-3">
        <label for="TalentId">Talang</label>
        <select asp-for="Assignment.TalentId" class="form-control"
                asp-items="@(new SelectList(Model.Talents, "Id", "FullName"))"></select>
    </div>

    <div class="form-group mb-3">
        <label for="MentorId">Mentor</label>
        <select asp-for="Assignment.MentorId" class="form-control"
                asp-items="@(new SelectList(Model.Mentors, "Id", "FullName"))"></select>
    </div>

    <div class="form-group mb-3">
        <label for="EndDate">Slutdatum (för arkivering)</label>
        <input asp-for="Assignment.EndDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Spara</button>
    <a asp-page="/Arbetsgivare/Index" class="btn btn-secondary">Avbryt</a>
</form>
